<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.daisuzz.sampleintellijplatformplugintemplate</id>
    <name>sample-intellij-platform-plugin-template</name>
    <vendor>daisuzz</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="TOOL_WINDOW" id="Sample intellij platform plugin template"/>
    </extensions>

    <actions>
        <action id="com.github.daisuzz.sampleintellijplatformplugintemplate.action.CopyGitHubUrlAction"
                class="com.github.daisuzz.sampleintellijplatformplugintemplate.action.CopyGitHubUrlAction"
                text="Sample Intellij Platform Plugin Template"
                description="Sample intellij platform plugin template">
            <keyboard-shortcut first-keystroke="control alt C" keymap="$default"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
